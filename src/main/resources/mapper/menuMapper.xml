<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ontherocks.cocktail.mapper.MenuMapper">

    <!-- 메뉴 전체 조회 -->
    <select id="selectAllMenus" resultType="com.ontherocks.cocktail.dto.MenuDTO">
        SELECT menu_id, name, price, description
        FROM menu
    </select>

    <!-- 메뉴 상세 조회 -->
    <select id="selectMenuById" resultType="com.ontherocks.cocktail.dto.MenuDTO">
        SELECT menu_id, name, price, description
        FROM menu
        WHERE menu_id = #{menuId}
    </select>
</mapper>
