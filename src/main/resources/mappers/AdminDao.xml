<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icia.cocktail.Dao.AdminDao">

    <insert id="insertAdmin">
        insert into admin (username, password, email, tel, status, role)
        values (#{username}, #{password}, #{email}, #{tel}, default, default);
    </insert>

    <insert id="noticeWrite">
        insert into notice values
        <choose>
            <when test="deadline != null">
                (null,#{notice_title},#{notice_contents},default,default,#{deadline},default)
            </when>
            <otherwise>
                (null,#{notice_title},#{notice_contents},default,default,default,default)
            </otherwise>
        </choose>
    </insert>

    <select id="findByUsername" resultType="com.icia.cocktail.dto.AdminDto">
        select * from admin where username = #{username}
    </select>

    <select id="getActiveNotice" resultType="com.icia.cocktail.dto.NoticeDto">
        select * from notice
        where status = 'ACTIVE' and (deadline is null or deadline >= current_date)
    </select>

</mapper>